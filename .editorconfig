# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Matches all files and sets common settings
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific settings for *.env files
[*.env]
insert_final_newline = true
